{
  "name": "bsuir",
  "version": "1.0.0",
  "author": "Eugene Medvedev",
  "description": "Базовые технологические процессы микроэлектроники",
  "homepage": ".",
  "main": "build/electron/main.js",
  "private": true,
  "dependencies": {
    "@journeyapps/sqlcipher": "^5.3.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/electron-devtools-installer": "^2.2.2",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.13.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/sequelize": "^4.28.15",
    "antd": "^5.6.3",
    "electron-devtools-installer": "^3.2.0",
    "electron-reload": "^1.5.0",
    "pdf-lib": "^1.17.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.10.1",
    "react-pdf": "^7.1.2",
    "react-router-dom": "^6.13.0",
    "react-scripts": "5.0.1",
    "react-uuid": "^2.0.0",
    "sequelize": "^6.32.1",
    "sqlite3": "^5.1.6",
    "web-vitals": "^3.1.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "postinstall": "electron-builder install-app-deps",
    "electron:dev": "concurrently \"cross-env BROWSER=none npm run start\" \"wait-on http://127.0.0.1:3000 && tsc -p electron -w\" \"wait-on http://127.0.0.1:3000 && tsc -p electron && electron .\"",
    "electron:build:win": "npm run build && tsc -p electron && electron-builder --win --x64",
    "electron:build": "npm run build && tsc -p electron && electron-builder",
    "eject": "react-scripts eject",
    "lint": "eslint src/**/*.{js,jsx,ts,tsx,json}",
    "lint:fix": "eslint --fix src/**/*.{js,jsx,ts,tsx,json}",
    "format": "prettier --write src/**/*.{js,jsx,ts,tsx} --config ./.prettierrc"
  },
  "build": {
    "extends": null,
    "appId": "com.electron.myapp",
    "productName": "БГУИР КМиНэ Админ",
    "extraResources": [
      {
        "from": "./resources",
        "to": ".",
        "filter": [
          "**/*"
        ]
      }
    ],
    "files": [
      "build/**/*"
    ],
    "directories": {
      "buildResources": "public"
    },
    "nsis": {
      "license": "LICENSE",
      "runAfterFinish": true,
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "unicode": true
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "electron": "^23.1.0",
    "electron-builder": "^23.6.0",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^35.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^2.8.8",
    "sass": "^1.63.6",
    "typescript": "^4.9.5",
    "wait-on": "^7.0.1"
  }
}
